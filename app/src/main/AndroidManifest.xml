<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gksoftware.auxiliary_health_app">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/health_ico"
        android:label="@string/app_name"
        android:roundIcon="@drawable/health_ico"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BloodOxygenActivity"></activity>
        <activity android:name=".BodyTemperatureActivity" />
        <activity android:name=".RespiratoryRateActivity" />
        <activity android:name=".UsersActivity" />
        <activity android:name=".HeartbeatActivity" />
        <activity android:name=".RegisterActivity" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>